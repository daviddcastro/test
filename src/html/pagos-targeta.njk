{% extends "layouts/default.njk" %}

{% block content %}
<div class="container mt-20 flex">
    <div class="w-2/12"></div>
    <div class="w-8/12">
        <img src="/images/targeta.png" alt="">
        <p class="font-bold mt-5">Nueva targeta</p>
        <img src="/images/visamastercard.png" class="w-16 mt-8" alt="">
        <p class="mt-3">Nombre del titular de la targeta</p>
        <input class="mt-2 p-1 rounded-lg w-96" type="text">
        <p class="mt-2">Número de la targeta</p>
        <input class="mt-2 p-1 rounded-lg w-96" type="text">
        <div class="flex mt-2">
            <div>
                <p>Fecha de caducidad//</p>
                <input class="mt-2 p-1 rounded-lg" type="date">
            </div>
            <div class="ml-10">
                <p>CVC</p>
                <input class="mt-2 p-1 rounded-lg" type="text">
            </div>
        </div>
        <p class="mt-10 font-bold text-xl">Cantidad a pagar x €</p>
        <button class="bg-sky-700 p-1 rounded-lg mt-5 text-white w-60">Confirmar</button>
    </div>
    <div class="w-2/12"></div>
</div>
{% endblock %}


